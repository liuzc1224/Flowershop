                <ul class="floor-products">

                    <%
                    if( Immortal != null){
                    Immortal.forEach(function(Flower){
                    %>
                    <li>
                        <a href="breadcrumbs?usid=<%=Flower.CommodityId%>" target="_blank">
            <span class="img-box" href="breadcrumbs?usid=<%=Flower.CommodityId%>">
                <img src="<%=Flower.ImgPath%>" height="240" width="220">
            </span>
                            <span class="product-title">永生花 · <%=Flower.FlowerName%></span>
                            <p class="price">
                                <span class="price-sign">¥</span>
                                <span class="price-num"><%=Flower.FlowerPrice%></span>
                            </p>
                        </a>
                    </li>
                    <%
                    });

                    }
                    %>
                </ul>
            </div>
        </div>
        <!--第三层完-->
    </section>
<script src="/javascripts/jquery-3.1.0.js"></script>
<script src="/javascripts/bootstrap.js"></script>
<script>
    $(function() {
        // 大图轮翻(5秒)
        $('#fullCarousel').carousel({ interval: 3000 });
        // 大图鼠标移到小圆点轮翻
        $("#fullCarousel>ol>li").hover(function () {
            var index = $("#fullCarousel ol li").index(this);
            $("#fullCarousel").carousel(index);
        });
    });
</script>
<script type="text/javascript" src="http://v3.jiathis.com/code/jia.js" charset="utf-8"></script>
