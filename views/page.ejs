                        <a href="breadcrumbs?usid=<%=Flower.CommodityId%>" target="_blank">
            <span class="img-box" href="breadcrumbs?usid=<%=Flower.CommodityId%>">
                <img src="<%=Flower.ImgPath%>" height="240" width="220">
            </span>
                            <span class="product-title">鲜花 · <%=(Flower.FlowerName).substring(0,(Flower.FlowerName).indexOf('-'))%></span>
                            <p class="price">
                                <span class="price-sign">¥</span>
                                <span class="price-num"><%=Flower.FlowerPrice%></span>
                            </p>
                        </a>
                    </li>
                    <%
                    });

                    }
                    %>
                </ul>
            </div>
        </div>
        <!--第一层完-->
        <!--第二层-->
        <div class="floor f2">
            <div class="ht">
                <h3><a href="elder" target="_blank">送长辈鲜花</a></h3>&nbsp;&nbsp;<span>赠·父母/恩师/长辈</span>
                <a class="more" href="elder" target="_blank">更多送长辈鲜花 &gt;&gt;</a>
            </div>
            <div class="bt">
                <div class="bt-l">
                    <div class="banner-box">
                        <a href="elder" target="_blank"><img src="http://img02.hua.com/pc/pimg/banner_elder.jpg" height="438" width="243"></a>
                    </div>
                    <a class="banner-link" href="elder" target="_blank">送长辈鲜花专区 &gt;&gt;</a>
                </div>
                <ul class="floor-products">

                    <%
                    if( Elder != null){
                    Elder.forEach(function(Flower){
                    %>
                    <li>
                        <a href="breadcrumbs?usid=<%=Flower.CommodityId%>" target="_blank">
            <span class="img-box" href="breadcrumbs?usid=<%=Flower.CommodityId%>">
                <img src="<%=Flower.ImgPath%>" height="240" width="220">
            </span>
                            <span class="product-title">鲜花 · <%=(Flower.FlowerName).substring(0,(Flower.FlowerName).indexOf('-'))%></span>
