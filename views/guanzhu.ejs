<script>
    $(function(){
        var name=localStorage.name;
        if(name==undefined){
            $('#my').html('<a href="login">你好,请登录</a>');
        }else{

            $('#my').html('<a href="guanzhu?usid='+localStorage.uid+'">欢迎  '+name+'</a>');
        }
        var uid=localStorage.uid;
        if(uid!=''||uid!='undefined') {
            $('.gouwu').click(function () {
                location.href = 'order?id=' + uid;
            });
            $('.order').click(function () {
                location.href = 'Settlement?id=' + uid;
            });
            $('.guanzhu').click(function () {
                location.href = 'my?id=' + uid;
            });
        }
        else{
            alert('请先登录')
        }
        no();
    });
    function no(){
        var tab=$('.grid-panel');
        console.log(tab);
        if(tab.length==0){
            console.log('123');
            $('.cent1').html('<h3 style="text-align: center">暂无关注！</h3>');
        }
    }
    $('.add-cart').click(function(){
        var name=localStorage.name;
        var uid=localStorage.uid;
        console.log(localStorage.uid);
        if(name==''||name=='undefined'){
            alert('请先登录！')
        }else {
            var tname;
            if(!e){
                var e = window.event || evt;
            }
            //获取事件点击元素
            var targ = e.target;
            //获取元素名称
            tname = targ.parentNode.parentNode.parentNode.childNodes[1].innerHTML;
            var dat={
                id:tname,
                uid:uid
            }
            if(uid==''||uid=='undefined'){
                alert('请重新登录！')
            }else{
                $.post('/selectorder',dat,function(res,err){
                    console.log(res,'loveflower')
                    if(res.length==0){
                        $.post('/insertorder',dat,function(res,err){
                            if(res['affectedRows']!='0'){
                                location.href='order?id='+uid;
//                                $(this).css('background-color','#FF6A00');
                            }
                        })
                    }
                    else{
                        alert('购物车已有！');
                    }
                })
            }
        }
    })
</script>
